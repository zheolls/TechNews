<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    android:background="@color/background"
    android:paddingHorizontal="15dp"
    android:paddingVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/video_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <com.allattentionhere.autoplayvideos.AAH_VideoImage
            android:id="@+id/videoiv"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        </com.allattentionhere.autoplayvideos.AAH_VideoImage>
        <ImageView
            android:id="@+id/img_playback"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/baseline_pause_circle_filled_24"
            android:visibility="gone"
             />
        <ImageView
            android:id="@+id/img_vol"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="8dp"
            android:src="@drawable/baseline_volume_up_24"
            android:visibility="gone"
             />
    </FrameLayout>


    <TextView
        android:paddingHorizontal="15dp"
        android:paddingVertical="3dp"
        android:textColor="@color/Black"
        android:text="测试视频标题测试视频标题测试视频标题"
        android:textSize="17sp"
        android:elegantTextHeight="true"
        android:id="@+id/video_title"
        app:layout_constraintTop_toBottomOf="@+id/video_iv"
        android:lineSpacingExtra="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.constraint.ConstraintLayout
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/video_title"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageView
            android:id="@+id/author_image"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_person_24"
            android:tint="@color/DarkGray"
            android:layout_height="match_parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:contentDescription="@string/todo" />
        <TextView
            android:text="作者"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:id="@+id/video_author"
            app:layout_constraintLeft_toRightOf="@+id/author_image"
            android:layout_width="130dp"
            android:layout_height="match_parent" />
        <ImageView
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintRight_toLeftOf="@+id/video_watch2"
            android:layout_width="0dp"
            android:tint="@color/DarkGray"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:id="@+id/thumb"
            android:src="@drawable/baseline_thumb_up_24"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/video_watch2"
            android:text="0"
            android:textSize="16sp"
            android:paddingStart="5dp"
            android:gravity="center_vertical"
            app:layout_constraintRight_toLeftOf="@id/share_video"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
        <ImageView
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:padding="6dp"
            android:tint="@color/DarkGray"
            android:id="@+id/share_video"
            android:src="@drawable/baseline_share_24"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/todo" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>